<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventList">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/plant_diseases_home"
            android:foregroundGravity="left"
            android:src="@drawable/background_decoration"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="-2dp" />

        <LinearLayout
            android:id="@+id/loginContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints,UselessLeaf,UselessParent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_family"
                android:text="@string/planation_events"
                android:textAlignment="center"
                android:textColor="@color/heading"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addEvents"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/poppins_family"
                android:text="@string/add_events"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/event1"
                android:layout_width="360dp"
                android:layout_height="167dp"
                android:layout_marginTop="20dp"
                android:onClick="clickNew"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/plantation_program"
                app:shapeAppearanceOverlay="@style/topRoundImages" />



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image1"
                android:layout_width="360dp"
                android:layout_height="167dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:onClick="clickNew1"
                android:scaleType="centerCrop"
                android:src="@drawable/seeds"
                app:shapeAppearanceOverlay="@style/topRoundImages" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image2"
                android:layout_width="360dp"
                android:layout_height="167dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:onClick="clickNew2"
                android:scaleType="centerCrop"
                android:src="@drawable/planting_adverticing"
                app:shapeAppearanceOverlay="@style/topRoundImages" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image14"
                android:layout_width="360dp"
                android:layout_height="167dp"
                android:layout_marginTop="20dp"
                android:onClick="clickNew3"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/plant_distribution"
                app:shapeAppearanceOverlay="@style/topRoundImages" />


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>